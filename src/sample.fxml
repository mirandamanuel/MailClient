<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main">
   <center>
      <AnchorPane prefHeight="500.0" prefWidth="900.0">
         <children>
            <AnchorPane fx:id="an_menu" prefHeight="500.0" prefWidth="200.0" style="-fx-background-color: #73bfdc;">
               <children>
                  <Pane prefHeight="37.0" prefWidth="200.0" style="-fx-background-color: #8ecae6;" />
                  <Button fx:id="butInbox" alignment="BASELINE_LEFT" defaultButton="true" layoutX="-1.0" layoutY="111.0" mnemonicParsing="false" onMouseClicked="#inboxButtClicked" prefHeight="31.0" prefWidth="203.0" text="INBOX">
                     <effect>
                        <Blend mode="SCREEN" />
                     </effect>
                     <font>
                        <Font name="Courier New Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="butCompose" alignment="BASELINE_LEFT" contentDisplay="CENTER" layoutX="-1.0" layoutY="142.0" mnemonicParsing="false" onMouseClicked="#composeButtClicked" prefHeight="31.0" prefWidth="203.0" text="COMPOSE EMAIL">
                     <effect>
                        <Blend mode="SCREEN" />
                     </effect>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
      
               </children>
            </AnchorPane>
            <AnchorPane fx:id="an_content" layoutX="200.0" prefHeight="500.0" prefWidth="293.0" style="-fx-background-color: #219ebc;">
               <children>
                  <Pane prefHeight="37.0" prefWidth="293.0" style="-fx-background-color: #3890bc;" />
                  <ScrollPane layoutX="1.0" layoutY="72.0" prefHeight="428.0" prefWidth="292.0" style="-fx-background-color: #219ebc; -fx-background-color: #219ebc;">
                     <content>
                        <TableView fx:id="emTable" fixedCellSize="25.0" onMouseClicked="#handle" prefHeight="426.0" prefWidth="290.0" style="-fx-background-color: #219ebc;">
                          <columns>
                              <TableColumn fx:id="emDate" prefWidth="50.0" resizable="false" style="-fx-background-color: #166281;" text="Date" />
                            <TableColumn fx:id="emSubject" prefWidth="69.0" resizable="false" style="-fx-background-color: #166281;" text="Subject">
                                 <columns>
                                    <TableColumn fx:id="emFrom" prefWidth="75.0" resizable="false" style="-fx-background-color: #166281;" text="From">
                                       <columns>
                                          <TableColumn fx:id="emTo" prefWidth="75.0" resizable="false" style="-fx-background-color: #166281;" text="To" />
                                       </columns>
                                    </TableColumn>
                                 </columns>
                              </TableColumn>
                            <TableColumn fx:id="emMessage" editable="false" prefWidth="171.0" resizable="false" style="-fx-text-fill: #ffffff; -fx-background-color: #166281;" text="Message" />
                          </columns>
                        </TableView>
                     </content>
                  </ScrollPane>
               </children>
            </AnchorPane>
            <AnchorPane fx:id="an_message" layoutX="493.0" layoutY="-1.0" prefHeight="500.0" prefWidth="410.0" style="-fx-background-color: #fafafa;">
               <children>
                  <Pane layoutY="1.0" prefHeight="38.0" prefWidth="407.0" style="-fx-background-color: #166281;" />
                  <Label layoutX="23.0" layoutY="42.0" text="INBOX">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Pane layoutX="47.0" layoutY="132.0" prefHeight="314.0" prefWidth="314.0" style="-fx-background-color: #fff; -fx-background-radius: 1.15em;" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
